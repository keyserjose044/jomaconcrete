---
/* src/pages/index.astro */
import BaseLayout from '../layouts/BaseLayout.astro';

const hero = '/images/hero.jpg'; // already in /public/images
---

<BaseLayout
  title="Experienced Concrete Expert | Joma Concrete"
  description="Commercial & residential concrete in the DFW area: slabs, driveways, sidewalks, ramps, and more. Free estimates — call 214-298-6681."
  image={hero}
>
  <!-- Preload hero for faster LCP -->
  <Fragment slot="head">
    <link rel="preload" as="image" href={hero} />
  </Fragment>

  <!-- ===== HERO (centered, with overlay) ===== -->
  <section class="hero" aria-label="Joma Concrete — recent slab project">
    <img class="hero-bg" src={hero} alt="" decoding="async" loading="eager" />
    <div class="hero-inner">
      <h1>Experienced Concrete Expert</h1>
      <p class="lede">
        Providing top-quality commercial and residential concrete work across the
        Dallas–Fort Worth area and beyond.
      </p>
      <div class="cta-row">
        <!-- Inverted buttons (Home) -->
        <a class="btn btn-white" href="/contact">Request a Free Estimate</a>
        <a class="btn btn-ghost" href="tel:12142986681">Call (214) 298-6681</a>
      </div>
    </div>
  </section>

  <!-- ===== SERVICES ===== -->
  <section class="content">
    <h2>Services</h2>
    <ul class="cols">
      <li>Driveways &amp; sidewalks</li>
      <li>Slabs &amp; foundations</li>
      <li>Ramps &amp; curb ramps</li>
      <li>Patios &amp; walkways</li>
      <li>Repairs &amp; replacements</li>
      <li>Commercial flatwork</li>
    </ul>
  </section>

  <style>
    /* --- HERO LAYOUT --- */
    .hero {
      position: relative;
      isolation: isolate;
      border-radius: 12px;
      overflow: hidden;
      min-height: 380px;
      display: grid;
      place-items: center;
      margin-bottom: 28px;
    }
    .hero-bg {
      position: absolute; inset: 0;
      width: 100%; height: 100%; object-fit: cover;
      filter: saturate(1.05);
    }
    .hero::before {
      /* Slightly cooler overlay so Home looks distinct from About */
      content: "";
      position: absolute; inset: 0;
      background:
        linear-gradient(180deg, rgba(8,12,24,.35), rgba(8,12,24,.55));
      z-index: 0;
    }
    .hero-inner {
      position: relative; z-index: 1;
      max-width: 900px;
      padding: 32px 16px;
      text-align: center;
      color: #fff;
    }
    .hero h1 {
      margin: 0 0 8px;
      font-size: clamp(2rem, 6vw, 3rem);
      line-height: 1.1;
      text-shadow: 0 2px 18px rgba(0,0,0,.35);
    }
    .lede {
      margin: 0 auto 16px;
      max-width: 70ch;
      font-size: clamp(1rem, 2.6vw, 1.25rem);
      text-shadow: 0 1px 12px rgba(0,0,0,.25);
    }
    .cta-row {
      display: flex; gap: 12px; justify-content: center; flex-wrap: wrap;
      margin-top: 10px;
    }

    /* --- BUTTONS (Home uses inverted scheme) --- */
    .btn {
      display: inline-block;
      padding: 12px 18px;
      border-radius: 10px;
      font-weight: 600;
      text-decoration: none;
      transition: transform .12s ease, box-shadow .12s ease, background .12s ease, color .12s ease, border-color .12s ease;
    }
    .btn:active { transform: translateY(1px); }

    /* Solid white w/ dark text */
    .btn-white {
      background: #fff; color: #111827;
      box-shadow: 0 8px 24px rgba(0,0,0,.18);
    }
    .btn-white:hover { background: #f3f4f6; }

    /* Transparent with white border/text */
    .btn-ghost {
      background: transparent; color: #fff; border: 1px solid rgba(255,255,255,.85);
      backdrop-filter: saturate(120%) blur(0.5px);
    }
    .btn-ghost:hover { border-color: #fff; color: #fff; }

    /* --- CONTENT --- */
    .content { margin-top: 1.75rem; }
    .cols {
      list-style: disc inside;
      columns: 2;
      max-width: 900px;
      padding: 0;
      margin: 0.5rem 0 0;
      gap: 1rem;
    }

    @media (max-width: 850px) {
      .hero { min-height: 320px; }
      .cols { columns: 1; }
    }
  </style>
</BaseLayout>

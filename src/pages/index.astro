---
/* src/pages/index.astro */
import BaseLayout from '../layouts/BaseLayout.astro';

const hero = '/images/hero.jpg';
---

<BaseLayout
  title="JOMA Concrete LLC | Reliable Concrete Contractor in DFW"
  description="Professional concrete work across Dallasâ€“Fort Worth â€” driveways, slabs, patios, ramps, and more. Family-run, 30+ years experience."
  image={hero}
>
  <!-- Preload hero for faster LCP -->
  <Fragment slot="head">
    <link rel="preload" as="image" href={hero} />
  </Fragment>

  <!-- ===== HERO ===== -->
  <section class="hero" aria-label="JOMA Concrete â€” Reliable Concrete Work in DFW">
    <img
      class="hero-img"
      src={hero}
      alt="JOMA Concrete crew working on a driveway"
      decoding="async"
      loading="eager"
    />

    <div class="hero-inner">
      <h1>Reliable Concrete Work Across DFW</h1>
      <p class="lede">
        Commercial and residential concrete specialists â€” driveways, slabs, patios, ramps, and more.
      </p>

      <div class="cta-row">
        <span class="btn btn-badge">Bonded &amp; Insured</span>
        <a class="btn btn-primary" href="#contact">Request a Free Estimate</a>
        <a class="btn btn-outline" href="tel:12142986681">Call (214) 298-6681</a>
      </div>
    </div>
  </section>

  <!-- ===== ABOUT ===== -->
  <section id="about" class="content">
    <h2>Who We Are</h2>
    <p>
      Founded in 2019 by <strong>Jose Marquez</strong>, a construction
      foreman with <strong>30+ years of experience</strong> in
      commercial concrete work, <strong>JOMA Concrete</strong> is a
      trusted, family-run construction company serving the Dallasâ€“Fort
      Worth area and nearby cities.
    </p>

    <div class="grid">
      <div>
        <h3>What We Do</h3>
        <ul>
          <li>Driveways &amp; sidewalks</li>
          <li>Slabs &amp; foundations</li>
          <li>Ramps &amp; curb ramps (ADA / TAS aware)</li>
          <li>Patios &amp; walkways</li>
          <li>Repairs &amp; replacements</li>
          <li>Commercial flatwork</li>
        </ul>
      </div>
      <div>
        <h3>Why Choose Us</h3>
        <ul>
          <li>30+ years experience</li>
          <li>Family-run &amp; local</li>
          <li>Licensed &amp; insured</li>
          <li>Clean job sites &amp; on-time delivery</li>
          <li>ADA / TAS-compliant ramp work</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- ===== GALLERY TEASER ===== -->
  <section id="gallery" class="pair">
    <figure>
      <img src="/images/2ndchancejob.png" alt="ADA handicap ramps at 2nd Chance Baptist Church" loading="lazy" />
      <figcaption>ADA handicap ramps at 2nd Chance Baptist Church</figcaption>
    </figure>
    <figure>
      <img src="/images/retainingwallbtc.png" alt="8 ft retaining wall and pillars at Big Town Concrete Plant" loading="lazy" />
      <figcaption>8 ft retaining wall and pillars at Big Town Concrete Plant</figcaption>
    </figure>
  </section>

  <!-- ===== CONTACT ===== -->
  <section id="contact" class="content contact">
    <h2>Contact Us</h2>
    <p class="contact-lede">
      Need a reliable concrete crew? Call, text, or email us for a free estimate today.
    </p>

    <div class="contact-pills">
      <div class="contact-pill">
        <span class="pill-label">Call / Text</span>
        <a href="tel:12142986681">(214) 298-6681</a>
      </div>

      <div class="contact-pill">
        <span class="pill-label">Email</span>
        <a href="mailto:josemarquez044@gmail.com">josemarquez044@gmail.com</a>
      </div>

      <div class="contact-pill">
        <span class="pill-label">Company</span>
        <span>JOMA Concrete LLC</span>
      </div>
    </div>

    <a class="btn btn-primary btn-wide" href="tel:12142986681">
      ðŸ“ž Call Now for a Free Estimate
    </a>
  </section>


  <!-- ===== SMOOTH SCROLL ===== -->
  <script is:inline>
    document.addEventListener('click', (e) => {
      const a = e.target.closest('a[href^="#"]');
      if (!a) return;
      const id = a.getAttribute('href').substring(1);
      const el = document.getElementById(id);
      if (el) {
        e.preventDefault();
        el.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  </script>

  <style>
  /* === HERO === */
    .hero {
      margin-bottom: 28px;
    }
    
    .hero-img {
      width: 100%;
      height: auto;
      display: block;
      border-radius: 12px;
      object-fit: contain;
    }
    
    .hero-inner {
      text-align: center;
      padding: 20px 16px 0;
      max-width: 900px;
      margin: 0 auto;
    }
    
    .hero h1 {
      margin: 0 0 8px;
      font-size: clamp(2rem, 6vw, 3rem);
      line-height: 1.1;
    }
    
    .lede {
      margin: 0 auto 16px;
      max-width: 70ch;
      font-size: clamp(1rem, 2.6vw, 1.25rem);
    }
    
    /* === HERO CTA BUTTONS === */
    .cta-row {
      display: flex;
      gap: 12px;
      justify-content: center;
      flex-wrap: wrap;
      margin-top: 10px;
    }
    
    .btn {
      display: inline-block;
      padding: 12px 18px;
      border-radius: 10px;
      font-weight: 600;
      text-decoration: none;
      transition:
        background .15s ease,
        color .15s ease,
        border-color .15s ease,
        box-shadow .15s ease;
    }
    
    /* Badge (non-clickable) */
    .btn-badge {
      background: #1e3a8a;
      color: #fff;
      cursor: default;
      user-select: none;
      box-shadow: 0 6px 16px rgba(0,0,0,.25);
    }
    
    /* Regular buttons */
    .btn-primary {
      background: #111827;
      color: #fff;
    }
    .btn-primary:hover {
      background: #0b1220;
    }
    
    .btn-outline {
      border: 1px solid #111827;
      color: #111827;
      background: #fff;
    }
    .btn-outline:hover {
      border-color: #0b1220;
      color: #0b1220;
    }


    /* === SECTIONS === */
    .content {
      margin-top: 2rem;
      max-width: 1000px;
      margin-inline: auto;
    }

    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 28px;
      margin-top: 1rem;
    }

    .pair {
      display: grid;
      grid-template-columns: repeat(2, minmax(0,1fr));
      gap: 16px;
      margin: 2rem auto;
      max-width: 1000px;
    }

    .pair img {
      width: 100%;
      height: 260px;
      object-fit: cover;
      border-radius: 12px;
    }

    .pair figcaption {
      margin-top: 8px;
      font-size: 1rem;
      font-weight: 600;   /* âœ… makes captions bold */
      text-align: center; /* âœ… centers text under images */
      opacity: 0.85;      /* âœ… a bit more visible */
      display: block;     /* âœ… ensures proper centering across browsers */
    }

    .contact-grid {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      margin-top: 1rem;
    }

    @media (max-width: 850px) {
      .grid {
        grid-template-columns: 1fr;
      }
      .pair {
        grid-template-columns: 1fr;
      }
    }

    /* === CONTACT (Bubble Layout like Warrior Dumps) === */
    .contact {
      text-align: center;
      margin-top: 3rem;
      margin-bottom: 3rem;
    }
  
    .contact-lede {
      max-width: 40rem;
      margin: 0.5rem auto 1.5rem;
      font-size: 1.05rem;
    }
  
    .contact-pills {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 14px;
      margin-bottom: 1.75rem;
    }
  
    .contact-pill {
      min-width: 210px;
      padding: 10px 18px;
      border-radius: 999px;
      background: #f3f4f6;
      box-shadow: 0 4px 12px rgba(15, 23, 42, 0.08);
      display: flex;
      flex-direction: column;
      align-items: center;
      font-size: 0.95rem;
    }
  
    .pill-label {
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      opacity: 0.7;
      margin-bottom: 2px;
    }
  
    .contact-pill a {
      font-weight: 600;
      color: #111827;
      text-decoration: none;
    }
  
    .contact-pill a:hover {
      text-decoration: underline;
    }
  
    .btn-wide {
      display: block;
      width: min(420px, 100%);
      margin: 0 auto;
    }
  
    @media (max-width: 480px) {
      .btn-wide {
        width: 90%;
        max-width: 360px;
      }
    }
    
    /* === ABOUT (Center text on mobile) === */
    @media (max-width: 850px) {
      #about {
        text-align: center;
      }
    
      #about ul {
        text-align: left;      /* keeps bullet lists aligned for readability */
        display: inline-block; /* prevents stretching across the screen */
      }
    }


  </style>
</BaseLayout>

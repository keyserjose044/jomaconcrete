---
import BaseLayout from '../layouts/BaseLayout.astro';

const SITE_NAME = 'Joma Concrete';
const SITE_PHONE = '(214) 298-6681';
const SITE_EMAIL = 'josemarquez044@gmail.com';

// Format phone for tel link
const phoneDigits = SITE_PHONE.replace(/\D/g, '');
const phoneHref = `tel:1${phoneDigits}`;
const mailHref = `mailto:${SITE_EMAIL}`;
---

<BaseLayout
  title="Contact | Joma Concrete"
  description="Free estimates. Call (214) 298-6681 or send a message â€” serving the Dallasâ€“Fort Worth area."
>
  <section class="content contact">
    <h1>Contact Us</h1>
    <p class="contact-lede">
      Need a reliable concrete crew? Call, text, or email us for a free estimate today.
    </p>

    <div class="contact-pills">
      <div class="contact-pill">
        <span class="pill-label">Call / Text</span>
        <a href={phoneHref}>{SITE_PHONE}</a>
      </div>

      <div class="contact-pill">
        <span class="pill-label">Email</span>
        <a href={mailHref}>{SITE_EMAIL}</a>
      </div>

      <div class="contact-pill">
        <span class="pill-label">Company</span>
        <span>{SITE_NAME}</span>
      </div>
    </div>

    <a class="btn btn-primary btn-wide" href={phoneHref}>
      ðŸ“ž Call Now for a Free Estimate
    </a>
  </section>

  <style>
    .contact {
      text-align: center;
      margin-top: 3rem;
      margin-bottom: 3rem;
    }

    .contact-lede {
      max-width: 40rem;
      margin: 0.5rem auto 1.5rem;
      font-size: 1.05rem;
    }

    .contact-pills {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 14px;
      margin-bottom: 1.75rem;
    }

    .contact-pill {
      min-width: 210px;
      padding: 10px 18px;
      border-radius: 999px;
      background: #f3f4f6;
      box-shadow: 0 4px 12px rgba(15, 23, 42, 0.08);
      display: flex;
      flex-direction: column;
      align-items: center;
      font-size: 0.95rem;
    }

    .pill-label {
      font-size: 0.7rem;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      opacity: 0.7;
      margin-bottom: 2px;
    }

    .contact-pill a {
      font-weight: 600;
      color: #111827;
      text-decoration: none;
    }

    .contact-pill a:hover {
      text-decoration: underline;
    }

    .btn {
      display: inline-block;
      padding: 12px 18px;
      border-radius: 10px;
      font-weight: 600;
      text-decoration: none;
      transition: background 0.15s ease, color 0.15s ease;
    }

    .btn-primary {
      background: #111827;
      color: #fff;
    }

    .btn-primary:hover {
      background: #0b1220;
    }

    .btn-wide {
      display: block;
      width: min(420px, 100%);
      margin: 0 auto;
    }

    @media (max-width: 480px) {
      .btn-wide {
        width: 90%;
        max-width: 360px;
      }
    }
  </style>
</BaseLayout>

---
interface Props {
  path?: string;   // defaults to current page
  label?: string;  // defaults "views"
  write?: boolean; // default true (index cards can pass false)
}
const {
  path = Astro.url?.pathname ?? "/",
  label = "views",
  write = true,
} = Astro.props as Props;

const elId = "llz-view-" + Math.random().toString(36).slice(2, 8);
